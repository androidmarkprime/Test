<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pew="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/txt_chosen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        tools:text="BECAUSE YOU WENT HERE" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/txt_chosen_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:id="@+id/rl_going_to_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/img_save_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/ll_tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/ll_first_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_tag_one"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="4dp"/>

                                <TextView
                                    android:id="@+id/txt_tag_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_gravity="center_vertical"
                                    android:textAllCaps="true"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_second_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="8dp">

                                <ImageView
                                    android:id="@+id/img_tag_two"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="4dp"/>

                                <TextView
                                    android:id="@+id/txt_tag_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_gravity="center_vertical"
                                    android:textAllCaps="true"
                                    android:textSize="10sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:id="@+id/ll_third_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="4dp">

                            <ImageView
                                android:id="@+id/img_tag_three"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="4dp"/>

                            <TextView
                                android:id="@+id/txt_tag_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical"
                                android:textAllCaps="true"
                                android:textSize="10sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_fourth_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp">

                            <ImageView
                                android:id="@+id/img_tag_four"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="4dp"/>

                            <TextView
                                android:id="@+id/txt_tag_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical"
                                android:textAllCaps="true"
                                android:textSize="10sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/gradient_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:layout_margin="6dp" />

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:background="@drawable/rounded_frame" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_rounded_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame" />

        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_small_location"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Turq"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>